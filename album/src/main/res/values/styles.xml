<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AlbumTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:textAllCaps" tools:targetApi="ice_cream_sandwich">false</item>-->
    </style>

    <style name="TransparentActivity" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:windowBackground">@color/Transparent</item>-->
        <!--<item name="android:colorBackgroundCacheHint">@null</item>-->
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <!--<item name="android:windowNoTitle">true</item>-->
        <!--<item name="android:windowContentOverlay">@null</item>-->
        <!--<item name="android:windowDisablePreview">true</item>-->
    </style>

    <!-- MatchParent -->

    <style name="MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- WrapContent -->

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapContent.WidthMatchParent">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Toolbar" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="theme">@style/ToolbarTheme</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="titleTextColor">@color/FontLight</item>
        <item name="subtitleTextColor">@color/FontLight</item>
        <item name="navigationIcon">@drawable/ic_back_white</item>
    </style>

    <style name="ToolbarTheme">
        <item name="actionMenuTextColor">@color/FontLight</item>
    </style>

    <!-- CheckBox -->

    <style name="CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox"/>

    <style name="CheckBox.WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="DialogStyle.Folder">
        <item name="android:windowBackground">@color/Transparent</item>
    </style>

    <!-- Button -->
    <style name="ButtonText" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="loadingDialog" parent="@android:style/Theme.Holo.Light.Dialog.NoActionBar"/>

    <style name="loadingDialog.Loading">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>
    <style name="durban_PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="durban_Toolbar" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="titleTextColor">@color/durban_White</item>
        <item name="subtitleTextColor">@color/durban_White</item>
        <item name="theme">@style/durban_ToolbarTheme</item>
    </style>

    <style name="durban_ToolbarTheme">
        <item name="actionMenuTextColor">@color/durban_White</item>
    </style>

    <style name="durban_Toolbar.PopupTheme">
        <item name="popupTheme">@style/durban_PopupOverlay</item>
    </style>


    <style name="durban_MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="durban_MatchParent.WidthWeight">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="durban_WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="durban_WrapContent.WidthMatchParent">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="durban_WrapContent.WidthWeight">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="durban_WrapContent.WidthWeight.ControllerTitle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/durban_White</item>
    </style>

    <style name="durban_MatchParent.ItemRoot">
        <item name="android:layout_height">@dimen/durban_dp_70</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="durban_MatchParent.WidthWeight.ControllerItem">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="durban_WrapContent.ControllerButton">
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
</resources>